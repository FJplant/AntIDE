package com.antsoft.ant.manager.projectmanager;

import java.awt.*;
import java.util.*;
import javax.swing.*;
import javax.swing.tree.*;

public class ProjectTreeCellRenderer extends DefaultTreeCellRenderer {//JLabel implements TreeCellRenderer{
  //static protected ImageIcon projectRoot;
  static protected ImageIcon project;
  static protected ImageIcon folderClosed;
  static protected ImageIcon folderOpen;
  static protected ImageIcon fileClosed;
  static protected ImageIcon fileOpen;

  String imagePath;

  static {
    try {
      //projectRoot = new ImageIcon(ProjectTreeCellRenderer.class.getResource("image/projectRoot.gif"));
      project = new ImageIcon(ProjectTreeCellRenderer.class.getResource("image/project.gif"));
			folderClosed = new ImageIcon(ProjectTreeCellRenderer.class.getResource("image/folderclosed.gif"));
			folderOpen = new ImageIcon(ProjectTreeCellRenderer.class.getResource("image/folderopen.gif"));
      fileClosed = new ImageIcon(ProjectTreeCellRenderer.class.getResource("image/file.gif"));
      fileOpen = new ImageIcon(ProjectTreeCellRenderer.class.getResource("image/openedfile.gif"));

    } catch (Exception e) {
      System.out.println("Couldn't load images: " + e);
    }
  }

	/**
	 *  Constructor
	 */
  public ProjectTreeCellRenderer() {
    super();
  }

  /** Whether or not the item that was last configured is selected. */
//  protected boolean selected;

  /**
   * This is messaged from JTree whenever it needs to get the size
   * of the component or it wants to draw it.
   * This attempts to set the font based on value, which will be
   * a TreeNode.
   */
  public Component getTreeCellRendererComponent(JTree tree, Object value,
					  boolean selected, boolean expanded,
					  boolean leaf, int row,
						boolean hasFocus) {
    super.getTreeCellRendererComponent(tree, value, selected, expanded, leaf, row, hasFocus);
    String stringValue = tree.convertValueToText(value, selected, expanded, leaf, row, hasFocus);

    /* Tooltips used by the tree. */
    setToolTipText(stringValue);

    /* Set the color and the font based on the SampleData userObject. */
		DefaultMutableTreeNode dmtn = (DefaultMutableTreeNode)value;
		if (dmtn instanceof ProjectPanelTreeNode) {
			ProjectPanelTreeNode pptn = (ProjectPanelTreeNode)dmtn;
			if (pptn.isFile()){
        if(pptn.isOpened()) setIcon(fileOpen);
        else setIcon(fileClosed);
      }

			else if (pptn.isFolder()) {
				if (expanded) setIcon(folderOpen);
				else setIcon(folderClosed);
			}
		}
		else setIcon(project);

    /* Set the text. */
    setText(stringValue);

    return this;
  }
}
